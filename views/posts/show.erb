<section>
	<img src="<%= @post.head_img %>" class="scale-with-grid">
	<div class="post-title">
		<h1><%= @post.title %></h1><br>
		<h3><%= @post.subtitle %></h3>
	</div>
</section>
<div class="post-body fourteen columns offset-by-one">
	<%= @post.date %> by <%= @post.author %> <br><br>
	<%= @post.body %>
</div>
<div class="tags fourteen columns offset-by-one">
	<ul>
		<% @tags.each do |tag| %>
		<li><a href="/tagged/<%= tag.word %>"><%= tag.word %></a></li>
		<% end %>
	</ul>
</div>
<% if admin %>
<a href="/posts/<%= @post.id %>/edit">Edit</a>

<form action="/posts/<%= @post.id %>" method="post">
	<input type="hidden" name="_method" value="delete">
	<input type="submit" value="Delete Post">
</form>
<% end %>
<hr>
<a href="/posts/<%= @next.id %>">
	<div class="next-article sixteen columns">
		
		<div class= "post-date">
			<h6><%= @next_desc %> | <%= @next.date %></h6>
		</div>
		<h3 class="title"><%= @next.title %></h3>
		<h4 class="subtitle"><%= @next.subtitle %></h4>
	</div>
</a>